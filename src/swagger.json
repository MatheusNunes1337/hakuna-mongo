{
    "openapi": "3.0.1",
    "info": {
      "title": "Hakuna",
      "description": "This API refers to a refers to software for creating study groups",
      "version": "1.0",
      "contact": {
        "email": "matheusnunesz1337@gmail.com"
      }
    },
    "servers": [
        {
          "url": "http://localhost:3000/",
          "description": "API de teste"
        }
    ],
    "paths": {
        "/api/v1/users": {
            "get": {
                "summary": "Get all users",
                "description": "At this endpoint you can get all users",
                "security": [{ "bearerAuth": [] }],
                "parameters": [
                    {
                        "in": "query",
                        "name": "offset",
                        "schema": {
                          "type": "integer"
                        },
                        "description": "The number of users to skip before starting to collect the result set",
                        "required": false
                    },
                    {
                        "in": "query",
                        "name": "limit",
                        "schema": {
                            "type": "integer"
                        },
                        "description": "The numbers of users to return",
                        "required": false
                    },
                    {
                        "in": "query",
                        "name": "username",
                        "schema": {
                            "type": "string"
                        },
                        "description": "The user's username"
                    },
                    {
                        "in": "query",
                        "name": "email",
                        "schema": {
                            "type": "string"
                        },
                        "description": "The user's email"
                    },
                    {
                        "in": "query",
                        "name": "type",
                        "schema": {
                            "type": "string"
                        },
                        "description": "The user's type (student or teacher)"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                          "application/json": {
                            "schema": {
                              "$ref": "#/components/schemas/Users"
                            }
                          }
                        }
                    },
                    "400": {
                        "description": "Error status 400",
                        "content": {
                          "application/json": {
                            "schema": {
                              "$ref": "#/components/schemas/Errors"
                            }
                          }
                        }
                    },
                    "401": {
                        "description": "Error status 401 - Unauthorized",
                        "content": {
                          "application/json": {
                            "schema": {
                              "$ref": "#/components/schemas/Errors"
                            }
                          }
                        }
                    }
                }
            },
            "post": {
                "summary": "Create an account",
                "description": "At this endpoint, you can create an account",
                "requestBody": {
                    "content": {
                      "application/json": {
                        "schema": {
                          "$ref": "#/components/schemas/UserRequest"
                        }
                      }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Success",
                        "content": {
                          "application/json": {
                            "schema": {
                              "$ref": "#/components/schemas/UserResponse"
                            }
                          }
                        }
                    },
                    "400": {
                        "description": "Bad request error",
                        "content": {
                          "application/json": {
                            "schema": {
                              "$ref": "#/components/schemas/Errors"
                            }
                          }
                        }
                    }
                }
            }
        },
        "/api/v1/users/{id}": {
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "schema": {
                      "type": "string"
                    },
                    "required": true
                }
            ],
            "get": {
                "summary": "Get a user by Id",
                "description": "At this endpoint, you can get a user by id",
                "security": [{ "bearerAuth": [] }],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Error status 400",
                        "content": {
                          "application/json": {
                            "schema": {
                              "$ref": "#/components/schemas/Errors"
                            }
                          }
                        }
                    },
                    "404": {
                        "description": "User not found",
                        "content": {
                          "application/json": {
                            "schema": {
                              "$ref": "#/components/schemas/Errors"
                            }
                          }
                        }
                    }
                }
            },
            "patch": {
                "summary": "Update a user",
                "description": "At this endpoint, you can update a user",
                "security": [{ "bearerAuth": [] }],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Error status 400",
                        "content": {
                          "application/json": {
                            "schema": {
                              "$ref": "#/components/schemas/Errors"
                            }
                          }
                        }
                    },
                    "404": {
                        "description": "User not found",
                        "content": {
                          "application/json": {
                            "schema": {
                              "$ref": "#/components/schemas/Errors"
                            }
                          }
                        }
                    }
                }  
            },
            "delete": {
                "summary": "Delete a user",
                "description": "At this endpoint, you can delete a user",
                "security": [{ "bearerAuth": [] }],
                "responses": {
                    "204": {
                        "description": "Success"
                    },
                    "400": {
                        "description": "Invalid id format",
                        "content": {
                          "application/json": {
                            "schema": {
                              "$ref": "#/components/schemas/Errors"
                            }
                          }
                        }
                    },
                    "404": {
                        "description": "User not found",
                        "content": {
                          "application/json": {
                            "schema": {
                              "$ref": "#/components/schemas/Errors"
                            }
                          }
                        }
                    }
                } 
            }
        },
        "/api/v1/authentication": {
            "post": {
                "summary": "User authentication",
                "description": "At this endpoint, you can get authenticated",
                "requestBody": {
                    "content": {
                      "application/json": {
                        "schema": {
                          "$ref": "#/components/schemas/LoginInput"
                        }
                      }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "token": {
                                            "type": "string"
                                        },
                                        "id": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Error status 400",
                        "content": {
                          "application/json": {
                            "schema": {
                              "$ref": "#/components/schemas/Errors"
                            }
                          }
                        }
                    }
                }
            }  
        }
        
    },
    "components": {
        "schemas": {
            "UserResponse": {
                "type": "object",
                "properties": {
                    "_id": {
                        "type": "string"
                    },
                    "username": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "student",
                            "teacher"
                        ]
                    },
                    "profilePic": {
                        "type": "string"
                    },
                    "contributionPoints": {
                        "type": "number"
                    },
                    "groups": {
                        "type": "array"
                    }
                }
            },
            "UserRequest": {
                "type": "object",
                "properties": {
                    "_id": {
                        "type": "string"
                    },
                    "username": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "student",
                            "teacher"
                        ]
                    }
                }
            },
            "Users": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/UserResponse"
                }
            },
            "LoginInput": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                }
            },
            "Error": {
                "type": "object",
                "properties": {
                    "description": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    }
                }
            },  
            "Errors": {
                "type": "array",
                "items": {
                    "$ref": "#/components/schemas/Error"
                }
            }  
        },
        "securitySchemes": {
            "bearerAuth": {
              "type": "http",
              "scheme": "bearer",
              "bearerFormat": "JWT"
            }
        }
    }
}